#!/usr/bin/sh

case $BLOCK_BUTTON in
	1) pamixer -t ;;
	3) setsid -f pavucontrol ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

sp0=ðŸ”ˆ
sp1=ðŸ”‰
sp2=ðŸ”Š
spmute=ðŸ”‡ 

toggle=$(amixer | awk '/^  Front Left: Playback/ {print $6}' | sed 's/\[//;s/\]//')
declare -i vol=$(amixer | awk '/^  Front Left: Playback/ {print $5}' | sed 's/\[//;s/\]//;s/\%//')

if [[ $vol -le 50 ]]
then
	if [[ $vol -le 5 ]]
	then
		icon=$sp0
	else
		icon=$sp1
	fi
else
	icon=$sp2
fi

if [[ "$toggle" == "on" ]];then
	printf "$icon $vol%%"
else
	echo "$spmute $vol%"
fi
