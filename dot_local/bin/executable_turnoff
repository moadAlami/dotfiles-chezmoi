#!/usr/bin/env sh

[ $(echo -e 'Yes\nNo' | dmenu -i -p 'Are you sure you want to shutdown?') == 'Yes' ] && while pgrep mbsync > /dev/null 2>&1;do
notify-send '‚è≥ Waiting for mbsync to finish.'
sleep 5
done

notify-send 'üõë Shutting down' && shutdown now

