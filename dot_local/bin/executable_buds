#!/usr/bin/sh

if [ $(echo -e 'Yes\nNo' | dmenu -i -p "Connect to earbuds?") == 'Yes' ];then
	bluetoothctl power on
	bluetoothctl connect E0:67:81:13:77:4A && notify-send "Earbuds status" "Connected üéß"
	pkill -RTMIN+8 dwmblocks
	pkill -RTMIN+4 dwmblocks # Volume module
else
	bluetoothctl power off
	bluetoothctl disconnect && notify-send "Earbuds status" "Disconnected ‚ùå"
	pkill -RTMIN+8 dwmblocks
	pkill -RTMIN+4 dwmblocks # Volume module
fi
